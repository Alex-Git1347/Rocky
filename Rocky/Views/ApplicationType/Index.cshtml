@model IEnumerable<Rocky.Models.ApplicationType>

<div div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                Create New Application Type
            </a>
        </div>
    </div>

    <br><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-sriped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="5%"> @obj.Id</td>
                        <td width="60%"> @obj.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            No type exists.
        </p>
    }

</div>

